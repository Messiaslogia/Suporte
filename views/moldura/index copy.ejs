    <script>
    let caixaDePesquise = document.querySelector('.input_search')
    let resultadoDaPesquise = document.querySelector('#results_search')

    caixaDePesquise.addEventListener('input', async function () {
        let pesquisa = caixaDePesquise.value
        if (pesquisa == '') {
            resultadoDaPesquise.innerHTML = ''
        } else {
            await fetch(`http://192.168.1.9:3000/moldura/pesquisa/${pesquisa}`)
                .then(response => response.json())
                .then(data => {
                    resultadoDaPesquise.innerHTML = ''
                    for (i = 0; i <= data.length; i++) {
                        let div = `
                        <div>
